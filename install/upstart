#!upstart
description "node.js Flipnote server"
author      "Nick Swarr"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/flipnote-server.pid
    exec sudo -u flipnote /usr/local/bin/node /home/flipnote-server/build/app.js >> /var/log/flipnote-server.sys.log 2>&1
end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/flipnote-server.sys.log
end script

pre-stop script
    rm /var/run/flipnote-server.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/flipnote-server.sys.log
end script